pipeline {
    agent any

    environment {
        AWS_CREDENTIALS_ID = 'aws-creds'
        CLUSTER_NAME = 'proj-clus'
        REGION = 'us-east-1'
    }

    stages {
        stage('Create EKS Cluster') {
            steps {
                withAWS(credentials: "${AWS_CREDENTIALS_ID}", region: "${REGION}") {
                    script {
                        sh '''
                            # Create EKS Cluster
                            eksctl create cluster \
                                --name ${CLUSTER_NAME} \
                                --version 1.30 \
                                --region ${REGION} \
                                --nodegroup-name Link-Nodes \
                                --node-type t3.medium \
                                --nodes 1 \
                                --nodes-min 1 \
                                --nodes-max 1 \
                                --managed
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'EKS cluster created succesfully.'
        }
        failure {
            echo 'EKS cluster creation failed.'
        }
    }
}
